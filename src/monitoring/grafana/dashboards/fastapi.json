{
  "id": null,
  "uid": "fastapi-dashboard-advanced",
  "title": "FastAPI Metrics - Avancé",
  "tags": ["fastapi", "metrics", "latency"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "panels": [
    {
      "type": "graph",
      "title": "Requêtes par route et méthode",
      "targets": [
        {
          "expr": "rate(api_requests_total[1m])",
          "legendFormat": "{{method}} {{route}}",
          "refId": "A"
        }
      ],
      "id": 1,
      "gridPos": {"x": 0,"y": 0,"w": 12,"h": 8}
    },
    {
      "type": "graph",
      "title": "Répartition des statuts HTTP",
      "targets": [
        {
          "expr": "sum by(status)(rate(api_requests_total[1m]))",
          "legendFormat": "Status {{status}}",
          "refId": "B"
        }
      ],
      "id": 2,
      "gridPos": {"x": 12,"y": 0,"w": 12,"h": 8}
    },
    {
      "type": "graph",
      "title": "Latence moyenne par route (seconds)",
      "targets": [
        {
          "expr": "rate(http_request_duration_seconds_sum[1m]) / rate(http_request_duration_seconds_count[1m])",
          "legendFormat": "{{route}}",
          "refId": "C"
        }
      ],
      "id": 3,
      "gridPos": {"x": 0,"y": 8,"w": 24,"h": 8}
    }
  ]
}
